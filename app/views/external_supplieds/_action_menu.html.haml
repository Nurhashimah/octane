%td
 .btn-group.dropdown
  %button.btn.dropdown-toggle{"data-toggle" => "dropdown"}
   .span.caret
  %ul.dropdown-menu.pull-right.action_menu
   %li= link_to content_tag(:li, fa_icon("eye", text: (t 'actions.show'))), external_supplied
   - permitted_to? :update, :external_supplieds do
    %li= link_to content_tag(:li, fa_icon("pencil", text: (t 'actions.edit'))), edit_external_supplied_path(external_supplied)
   - permitted_to? :delete, :external_supplieds do
    %li.danger= link_to content_tag(:li, fa_icon("trash-o", text: (t 'actions.delete'))), external_supplied_path(external_supplied), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }
      