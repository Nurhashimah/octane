%fieldset
  .form-inline{role: "form"}
    = f.collection_select :inden_card_id, @inden_cards, :id, :details, :include_blank => (t 'helpers.prompt.select_inden_card'), :html_options => {:class => 'selectpicker'}
    = f.text_field :petrol_ltr, :class => 'text_field input-medium', :placeholder => 'Petrol in Ltr'
    = f.text_field :diesel_ltr, :class => 'text_field input-small', :placeholder => 'Diesel in Ltr'
    = f.hidden_field :_destroy
    = link_to content_tag(:i, "", class: "fa fa-trash-o"), "#", class: "removing_fields"

:javascript
  $('.removing_fields').click(function(){
    var fieldset=$(this).parent().parent();
    var form=$(this).parent();
    var all_fields=form.children();
    var destroyer=all_fields[0];
    destroyer.value=true;    
    fieldset.hide();
  });
