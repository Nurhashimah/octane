        %td=avtur.quantity
    %tr
      %th{colspan: "3"} AVTUR : Others
    %tr
      %th{colspan: "2"} Unit / Depot
      %th Amount
    - @avtur_others.each do |avtur|
      %tr
        %td{colspan: "2"}=avtur.unit_fuel.unit.name
        %td=avtur.quantity
    
    
      
