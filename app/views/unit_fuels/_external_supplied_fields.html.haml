%fieldset
  .form-inline{role: "form"}
    - cache "#{@mkey}/external_supplied-#{f.object_id}" do
      = f.collection_select :fuel_type_id, FuelType.include_petrol_diesel.order(:name), :id, :name, :include_blank => (t 'helpers.prompt.select_fuel_type'), :html_options => {:class => 'selectpicker'}
      = f.text_field :quantity, :class => 'text_field input-small', :placeholder => 'Quantity'
      = f.collection_select :unit_type_id, UnitType.all, :id, :description, :include_blank => (t 'helpers.prompt.select_unit_type'), :html_options => {:class => 'selectpicker'}
      = f.collection_select :source, Unit.where('name LIKE (?) OR name LIKE (?)','Tentera Darat', 'Tentera Udara DiRaja Malaysia' ), :id, :name, :include_blank => t('helpers.prompt.select_source2'), :html_options => {:class => 'selectpicker'}
      = f.hidden_field :_destroy
      /= link_to_remove_fields (fa_icon "trash-o"), f     