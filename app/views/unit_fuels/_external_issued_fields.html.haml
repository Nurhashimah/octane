%fieldset
  .form-inline{role: "form"}
    - fbkey=f.object.id.nil? ? f.object_id : f.object.id
    - cache "#{@mkey}/external_issued-#{fbkey}" do
      = f.collection_select :fuel_type_id, @petrol_diesel, :id, :name, :include_blank => (t 'helpers.prompt.select_fuel_type'), :html_options => {:class => 'selectpicker'}
      = f.text_field :quantity, :class => 'text_field input-small', :placeholder => 'Quantity'
      = f.collection_select :unit_type_id, @unit_types, :id, :description, :include_blank => (t 'helpers.prompt.select_unit_type'), :html_options => {:class => 'selectpicker'}
      = f.collection_select :source, @external_roots, :id, :name, :include_blank => t('helpers.prompt.select_source1'), :html_options => {:class => 'selectpicker'} 
      = f.hidden_field :_destroy
      /= link_to_remove_fields (fa_icon "trash-o"), f     
    