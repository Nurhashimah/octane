    %li.danger= link_to content_tag(:li, fa_icon("trash-o", text: (t 'actions.delete'))), fuel_transaction_path(fuel_transaction), :method => :delete, :data => { :confirm =>  t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }
      