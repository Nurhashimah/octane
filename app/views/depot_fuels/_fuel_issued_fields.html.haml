%fieldset
  .form-inline{role: "form"}
    = f.collection_select :fuel_type_id, FuelType.all, :id, :name, :include_blank => (t 'helpers.prompt.select_fuel_type'), :html_options => {:class => 'selectpicker'}
    = f.text_field :quantity, :class => 'text_field input-small', :placeholder => 'Quantity'
    = f.collection_select :unit_type_id, UnitType.all, :id, :description, :include_blank => (t 'helpers.prompt.select_unit_type'), :html_options => {:class => 'selectpicker'}
    = f.collection_select :unit_id,  Unit.where.not(id: Unit.is_depot.pluck(:id)).order(:name), :id, :name, :include_blank => (t 'helpers.prompt.select_unit'), :html_options => {:class => 'selectpicker'}
    = f.hidden_field :_destroy
    /= link_to_remove_fields (fa_icon "trash-o"), f     