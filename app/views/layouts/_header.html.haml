%header.navbar.navbar-fixed-top.navbar-inverse
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    %ul.nav.navbar-nav
      %li.dropdown
        %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
          %span= fa_icon "bars"
